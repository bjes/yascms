{% extends "layouts/master.jinja2" %}
{% block content %}
<div class="jumbotron jumbotron-fluid mb-3 p-2" style="background-color:#3498db;">
  <div class="container">
    <p class="h1 display-5 text-center text-white"><i class="fas fa-bullhorn"></i> 最新消息</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card border-primary mb-3">
        <div class="table-responsive">
          <table class="table table-hover table-striped text-center mb-0">
            <thead>
              <tr>
                <th scope="col" class="d-none d-md-table-cell">編號</th>
                <th scope="col" class="d-none d-md-table-cell">時間</th>
                <th scope="col" class="d-none d-sm-table-cell">發佈單位</th>
                <th scope="col" class="d-none d-sm-table-cell">類別</th>
                <th scope="col" class="d-none d-sm-table-cell">標題</th>
              </tr>
            </thead>
            <tbody>
              {% for each_news in news %}
                <tr>
                  <th class="d-none d-md-table-cell" scope="row">{{ loop.index }}</th>
                  <td class="d-none d-md-table-cell">{{ each_news.publication_date }}</td>
                  <td class="d-none d-sm-table-cell">{{ each_news.group.name }}</td>
                  <td class="d-none d-sm-table-cell">{{ each_news.category.name }}</td>
                  <td style="padding: 0px;"><a style="display: block; width: 100%; height: 100%; padding: .75rem;" href="#"><li class="d-flex justify-content-between align-items-center"><span>{% if each_news.is_pinned %}<i class="fas fa-thumbtack"></i> {% endif %}{{ each_news.title }}</span><span class="badge badge-pill badge-primary d-md-none">2019-02-26</span></li></a></td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock content %}
