{% extends 'tp_yass:themes/default/macros.jinja2' %}
{% if request.GET['c'] %}
  {% block first_page_url %}{{ request.route_url('news_list', _query={'p': 1, 'q': quantity_per_page, 'c': request.GET['c']}) }}{% endblock %}
  {% block next_page_url %}{{ request.route_url('news_list', _query={'p': current_page_number+1, 'q': quantity_per_page, 'c': request.GET['c']}) }}{% endblock %}
  {% block prev_page_url %}{{ request.route_url('news_list', _query={'p': current_page_number-1, 'q': quantity_per_page, 'c': request.GET['c']}) }}{% endblock %}
  {% block last_page_url %}{{ request.route_url('news_list', _query={'p': quantity_of_pages, 'q': quantity_per_page, 'c': request.GET['c']}) }}{% endblock %}
{% endif %}
