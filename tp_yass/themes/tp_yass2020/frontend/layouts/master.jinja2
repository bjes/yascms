{% extends "tp_yass:themes/default/layouts/master.jinja2" %}
{% block layout_css %}
  <link rel="stylesheet" href="{{ 'tp_yass:themes/default/static/css/frontend.css'|static_path }}">
  <style>
    .jumbotron-bg {
      {# TODO: banner 要隨機顯示 #}
      background-image: url("{{ 'tp_yass:uploads/themes/tp_yass2020/banner/banner01.jpg'|static_path }}");
    }
    {% if request.theme_config['settings']['custom_css']['visible'] %}
      {{ request.theme_config['settings']['custom_css']['value']|safe }}
    {% endif %}
  </style>
{% endblock layout_css %}
{% block navbar %}{% include "navbar.jinja2" %}{% endblock navbar %}
{% block banner %}
<div class="jumbotron jumbotron-fluid jumbotron-bg my-0">
  <div class="container">
    <div class="bg-trans p-2 text-white">
      <h1 class="display-4 d-md-block d-sm-none d-none">{{ request.site_config['site_name'] }}</h1>
      <p class="lead">{{ request.site_config['site_slogan'] }}</p>
    </div>
  </div>
</div>
{% endblock banner %}
{% block footer %}{% include "footer.jinja2" %}{% endblock footer%}
{% block layout_js %}
  <script src="{{ 'tp_yass:themes/default/static/js/fontawesome-all-5.11.2.min.js'|static_path }}"></script>
  <script src="{{ 'tp_yass:themes/default/static/js/jquery.smartmenus.min-1.1.0.js'|static_path }}"></script>
  <script src="{{ 'tp_yass:themes/default/static/js/jquery.smartmenus.bootstrap-4.min-1.1.0.js'|static_path }}"></script>
{% endblock layout_js %}
