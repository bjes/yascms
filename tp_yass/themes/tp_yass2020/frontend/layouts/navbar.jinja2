<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand d-flex flex-column align-items-center" href="#"><img class="w-75 d-lg-block d-none" src="{{ 'tp_yass:icons/logo.png'|static_path }}" alt="網站 logo">{{ request.sys_config['site_name'] }}</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent"
    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarContent">
    <ul class="navbar-nav flex-column" data-sm-options="{noMouseOver: true}">
      {% for navbar in navbar_trees recursive %}
        {# 有子選單的類型 #}
        {% if navbar.type == 1 or navbar.type == 4 %}
          {% if loop.depth == 1 %}
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbar_{{ navbar.aria_name }}_dropdown" aria-haspopup="true" aria-expanded="false">
          {% else %}
            <li class="dropdown">
              <a class="dropdown-item dropdown-toggle" href="#" aria-haspopup="true" aria-expanded="false">
          {% endif %}
          {% if navbar.icon -%}
            <i class="fas {{ navbar.icon }}"></i> {{ navbar.name }}
          {% else %}
                {{ navbar.name }}
          {%- endif %}
              </a>
            <ul class="dropdown-menu" aria-labelledby="navbar_{{ navbar.aria_name }}_dropdown">
              {% if navbar.type == 1 %}
                {{ loop(navbar.descendants) }}
              {% elif navbar.type == 4 %}
                {% for each_news_submenu in navbar.descendants %}
                  {# 最新消息底下的每個分類連結 #}
                  {% if each_news_submenu.type == 5 %}
                    <li><a class="dropdown-item" href="{{ request.route_url('news_list', _query={'c': each_news_submenu.category_id}) }}">{{ each_news_submenu.name }}</a></li>
                  {% elif each_news_submenu.type == 3 %}
                    <li class="dropdown-divider"></li>
                  {% elif each_news_submenu.type == 6 %}
                    <li><a class="dropdown-item" href="{{ request.route_url('news_list') }}">顯示全部</a></li>
                  {% endif %}
                {% endfor %}
              {% endif %}
            </ul>
          </li>
        {% elif navbar.type in (2, 7, 8, 9, 10) %}
          {% if loop.depth == 1 %}
            <li class="nav-item">
              <a class="nav-link" href="{{ navbar.url }}"{% if navbar.is_external %} target="_blank"{% endif %}>
                {% if navbar.icon %}<i class="fas {{ navbar.icon }}"></i> {% endif %}{{ navbar.name }}{% if navbar.is_external %} <i class="fas fa-external-link-alt"></i>{% endif %}
              </a>
          {% else %}
            <li>
              <a class="dropdown-item" href="{{ navbar.url }}"{% if navbar.is_external %} target="_blank"{% endif %}>
                {% if navbar.icon %}<i class="fas {{ navbar.icon }}"></i> {% endif %}{{ navbar.name }}{% if navbar.is_external %} <i class="fas fa-external-link-alt"></i>{% endif %}
              </a>
          {% endif %}
            </li>
        {% elif navbar.type == 3 %}
          <li class="dropdown-divider"></li>
        {% endif %}
      {% endfor %}
      {% if request.session['account'] %}
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarAccountDropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user"></i>
            {{ request.session['first_name']}}
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarAccountDropdown">
            <li><a class="dropdown-item" href="{{ request.route_url('backend_homepage') }}">後台管理</a></li>
            <li class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="{{ 'logout'|route_path }}">登出</a></li>
          </ul>
        </li>
      {% else %}
        <li class="nav-item">
          <a class="nav-link" href="{{ 'login'|route_path }}"><i class="fas fa-sign-in-alt"></i> 登入</a>
        </li>
      {% endif %}
    </ul>
    <form class="form-inline my-2 my-lg-0">
      <div class="input-group">
        <input class="form-control py-2" type="text" placeholder="搜尋內容" id="search-text">
        <span class="input-group-append bg-white">
          <button class="btn btn-outline-secondary border-0 search-btn-icon" type="button"><i class="fa fa-search"></i></button>
        </span>
      </div>
    </form>
  </div>
</nav>
