{% extends 'layouts/master.jinja2' %}
{% from 'tp_yass:themes/' ~ request.current_theme ~ '/macros.jinja2' import paginate with context %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-12"><h1>好站連結列表</h1></div>
    <div class="col-12">
      <div class="card border-primary mb-3">
        <div class="table-responsive">
          <table class="table table-hover table-striped text-center mb-0">
            <thead>
              <tr>
                <th scope="col" class="d-none d-md-table-cell">編號</th>
                <th scope="col" class="d-none d-md-table-cell">日期</th>
                <th scope="col" class="d-none d-md-table-cell">分類</th>
                <th scope="col" class="d-none d-sm-table-cell">標題</th>
                <th scope="col" class="d-none d-md-table-cell">群組</th>
                <th scope="col" class="d-none d-sm-table-cell">圖示</th>
                <th scope="col" class="d-none d-sm-table-cell">動作</th>
              </tr>
            </thead>
            <tbody>
            {% for each_link in link_list %}
              <tr>
                <th scope="row">{{ loop.index + (page_number - 1) * quantity_per_page }}</th>
                <td>{{ each_link.publication_date }}</td>
                <td>{{ each_link.category.name }}</td>
                <td><a href="#">{% if each_link.is_pinned %}<i class="bi bi-pin"></i> {% endif %}{{ each_link.title }}</a></td>
                <td><a href="#">{{ each_link.group.name }}</a></td>
                <td><a href="{{ each_link.url }}"><img width="120" src="{{ request.static_path('tp_yass:uploads/links/' ~ each_link.icon) }}"></a></td>
                <td>
                  {% if request.session['is_admin'] %}
                    <a class="btn btn-primary" href="{{ request.route_url('backend_link_edit', link_id=each_link.id) }}">編輯</a>
                    <a class="btn btn-danger" href="{{ request.route_url('backend_link_delete', link_id=each_link.id) }}">刪除</a>
                  {% else %}
                    {% if each_link.group.id in request.session['main_group_id_list'] %}
                      <a class="btn btn-primary" href="{{ request.route_url('backend_link_edit', link_id=each_link.id) }}">編輯</a>
                      <a class="btn btn-danger" href="{{ request.route_url('backend_link_delete', link_id=each_link.id) }}">刪除</a>
                    {% endif %}
                  {% endif %}
                </td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    {{ paginate("好站連結列表分頁", "backend_link_list", page_quantity_of_total_links, page_number, quantity_per_page) }}
    </div>
  </div>
</div>
{% endblock content %}
