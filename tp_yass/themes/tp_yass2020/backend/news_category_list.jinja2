{% extends 'layouts/master.jinja2' %}
{% from 'tp_yass:themes/' ~ request.effective_theme_name ~ '/macros.jinja2' import paginate with context %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">最新消息</li>
          <li class="breadcrumb-item active" aria-current="page">最新消息分類列表</li>
        </ol>
      </nav>
    </div>
    <div class="col-12">
      <div class="card">
        <div class="card-header">建立最新消息分類</div>
        <div class="card-body">
          <a href="{{ request.route_url('backend_news_category_create') }}" class="btn btn-primary mb-3">建立最新消息分類</a>
          <div class="table-responsive">
            <table class="table table-hover table-striped text-center mb-0">
              <thead>
              <tr>
                <th scope="col" class="d-none d-md-table-cell">編號</th>
                <th scope="col" class="d-none d-md-table-cell">名稱</th>
                <th scope="col" class="d-none d-sm-table-cell">動作</th>
              </tr>
              </thead>
              <tbody>
              {% for each_news_category in news_category_list %}
                <tr>
                  <th scope="row">{{ loop.index + (page_number - 1) * quantity_per_page }}</th>
                  <td>{{ each_news_category.name }}</td>
                  <td>
                    <a class="btn btn-primary" href="{{ request.route_url('backend_news_category_edit', news_category_id=each_news_category.id) }}">編輯</a>
                    <a class="btn btn-danger" href="{{ request.route_url('backend_news_category_delete', news_category_id=each_news_category.id) }}">刪除</a>
                  </td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
          {{ paginate("最新消息分類列表分頁", "backend_news_category_list", page_quantity_of_total_news_categories, page_number, quantity_per_page) }}
          <a href="{{ request.route_url('backend_news_category_create') }}" class="btn btn-primary mt-3">建立最新消息分類</a>
        </div>
      </div>
    </div>
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">最新消息</li>
          <li class="breadcrumb-item active" aria-current="page">最新消息分類列表</li>
        </ol>
      </nav>
    </div>
  </div>
</div>
{% endblock content %}
