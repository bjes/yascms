{% extends "tp_yass:themes/default/layouts/master.jinja2" %}
{% block layout_css %}
  <link rel="stylesheet" href="{{ 'tp_yass:themes/default/static/css/bootstrap-icons/bootstrap-icons.css'|static_path }}">
  <link rel="stylesheet" href="{{ 'tp_yass:themes/default/static/css/backend.css'|static_path }}">
{% endblock layout_css %}
{% block navbar %}{% include "navbar.jinja2" %}{% endblock navbar %}
{% block successful_flash %}
  <div class="container">
    <div class="row">
      <div class="col">
      {% if request.session.peek_flash('success') %}
        {% for msg in request.session.pop_flash('success') %}
          <div class="alert alert-success" role="alert">{{ msg }}</div>
        {% endfor %}
      {% endif %}
      </div>
    </div>
  </div>
{% endblock successful_flash %}
{% block failed_flash %}
  <div class="container">
    <div class="row">
      <div class="col">
      {% if request.session.peek_flash('fail') %}
        {% for msg in request.session.pop_flash('fail') %}
          <div class="alert alert-danger" role="alert">{{ msg }}</div>
        {% endfor %}
      {% endif %}
      </div>
    </div>
  </div>
{% endblock failed_flash %}
{% block footer %}{% endblock footer %}
{% block layout_js %}
  <script src="{{ 'tp_yass:themes/default/static/js/jquery.smartmenus.min-1.1.0.js'|static_path }}"></script>
  <script src="{{ 'tp_yass:themes/default/static/js/jquery.smartmenus.bootstrap-4.min-1.1.0.js'|static_path }}"></script>
{% endblock layout_js %}
