{% extends 'layouts/master.jinja2' %}
{% from 'tp_yass:themes/' ~ request.effective_theme_name ~ '/macros.jinja2' import paginate with context %}
{% block page_css %}
<link href="{{ request.static_path('tp_yass:static/' ~ request.effective_theme_name ~ '/css/jquery.bonsai-2.1.1.css') }}" rel="stylesheet">
{% endblock page_css %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-12"><h1>使用者列表</h1></div>
    <div class="col-12">
      <div class="card border-primary mb-3">
        <div class="table-responsive">
          <table class="table table-hover table-striped text-center mb-0">
            <thead>
              <tr>
                <th scope="col" class="d-none d-md-table-cell">編號</th>
                <th scope="col" class="d-none d-sm-table-cell">姓名</th>
                <th scope="col" class="d-none d-md-table-cell">帳號</th>
                <th scope="col" class="d-none d-md-table-cell">Email</th>
                <th scope="col" class="d-none d-sm-table-cell">群組</th>
                <th scope="col" class="d-none d-sm-table-cell">動作</th>
              </tr>
            </thead>
            <tbody>
            {% for user in user_list %}
              <tr>
                <th scope="row">{{ loop.index + (page_id - 1) * quantity_per_page }}</th>
                <td><a href="#">{{ user.last_name }}{{ user.first_name }}</a></td>
                <td>{{ user.account }}</td>
                <td>{{ user.email|join(', ') }}</td>
                <td>
                {% for group in user.groups %}
                  <a href="#">{{ group.name }}</a>{% if not loop.last %}, {% endif %}
                {% endfor %}
                </td>
                <td>
                  <a href="{{ request.route_url('backend_user_edit', user_id=user.id) }}" class="btn btn-primary">編輯</a>
                  {% if user.id != 1 %}
                    {# 管理者帳號不該顯示刪除按鈕 #}
                    <a href="{{ request.route_url('backend_user_delete', user_id=user.id) }}" class="btn btn-danger">刪除</a>
                  {% endif %}
                </td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    {{ paginate("使用者列表分頁", "backend_user_list", page_quantity_of_total_users, page_id, quantity_per_page) }}
    </div>
  </div>
</div>
{% endblock content %}
{% block page_js %}
<script src="{{ request.static_path('tp_yass:static/' ~ request.effective_theme_name ~ '/js/jquery.bonsai-2.1.1.js') }}"></script>
<script>
  $(function() {
    $('#root-group').bonsai({
      expandAll: true
    });
  });
</script>
{% endblock page_js %}
