{% extends 'layouts/master.jinja2' %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-12"><h1>好站連結分類 - 建立</h1></div>
    <div class="col-12">
      {% if form.errors %}
        <div class="alert alert-danger"  role="alert">
            <ul>
            {% for key in form.errors %}
              {% for msg in form.errors[key] %}
              <li>{{ msg }}</li>
              {% endfor %}
            {% endfor %}
            </ul>
        </div>
      {% endif %}
      <form action="" method="POST">
        <input type="hidden" name="csrf_token" value="{{ get_csrf_token() }}">
        <div class="form-group">
          {{ form.name.label() }}
          {{ form.name(class_='form-control', placeholder='請輸入分類名稱') }}
        </div>
        <div class="form-group">
          {{ form.order.label() }}
          {{ form.order(class_='form-control') }}
        </div>

        <button type="submit" class="btn btn-primary mb-3">建立</button> <button type="reset" class="btn btn-danger mb-3">重設</button>
      </form>
    </div>
  </div>
</div>
{% endblock content %}
