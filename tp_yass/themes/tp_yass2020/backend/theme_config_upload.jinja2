{% extends 'layouts/master.jinja2' %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">樣板管理</li>
          <li class="breadcrumb-item"><a href="{{ request.route_url('backend_theme_config_list') }}">樣板列表</a></li>
          <li class="breadcrumb-item active" aria-current="page">上傳樣板</li>
        </ol>
      </nav>
    </div>
    <div class="col-12">
      <div class="card">
        <div class="card-header">上傳樣板</div>
        <div class="card-body">
          {% if form.errors %}
            <div class="alert alert-danger" role="alert">
              <ul>
                {% for key in form.errors %}
                  {% for msg in form.errors[key] %}
                    <li>{{ msg }}</li>
                  {% endfor %}
                {% endfor %}
              </ul>
            </div>
          {% endif %}
          <div class="alert alert-warning" role="alert">
            上傳的樣板請壓縮成一個 .zip 檔案上傳，可將多個樣板壓縮在同一個 zip 檔一起上傳。
          </div>
          <form action="" method="post" enctype="multipart/form-data">
            <input type="hidden" name="csrf_token" value="{{ get_csrf_token() }}">
            <button type="submit" class="btn btn-primary">上傳</button>
            <div class="form-group">
              {{ form.theme.label() }}
              {{ form.theme(class_='form-control-file') }}
            </div>
            <div class="form-group form-check">
              {{ form.is_overwrite(class_='form-check-input') }}
              {{ form.is_overwrite.label(class_='form-check-label') }}
            </div>
            <button type="submit" class="btn btn-primary">上傳</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-12">
      <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">樣板管理</li>
          <li class="breadcrumb-item"><a href="{{ request.route_url('backend_theme_config_list') }}">樣板列表</a></li>
          <li class="breadcrumb-item active" aria-current="page">上傳樣板</li>
        </ol>
      </nav>
    </div>
  </div>
</div>
{% endblock content %}
