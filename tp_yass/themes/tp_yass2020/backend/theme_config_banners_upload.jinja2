{% extends 'layouts/master.jinja2' %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item active">樣板管理</li>
          <li class="breadcrumb-item"><a href="{{ request.route_url('backend_theme_config_list') }}">樣板列表</a></li>
          <li class="breadcrumb-item active" aria-current="page">{{ theme_config['name'] }} 樣板設定</li>
        </ol>
      </nav>
    </div>
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
              <a class="nav-link" href="{{ request.route_url('backend_theme_config_general_edit', theme_name=theme_config['name']) }}">一般設定</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ request.route_url('backend_theme_config_homepage_items_order_edit', theme_name=theme_config['name']) }}">首頁物件順序設定</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ request.route_url('backend_theme_config_banners_edit', theme_name=theme_config['name']) }}">橫幅設定</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="{{ request.route_url('backend_theme_config_banners_upload', theme_name=theme_config['name']) }}">上傳橫幅</a>
            </li>
          </ul>
        </div>
        <div class="card-body">
          {% if form.errors %}
            <div class="alert alert-danger" role="alert">
              <ul>
                {% for key in form.errors %}
                  {% for msg in form.errors[key] %}
                    <li>{{ msg }}</li>
                  {% endfor %}
                {% endfor %}
              </ul>
            </div>
          {% endif %}
          <div class="alert alert-warning" role="alert">
            橫幅尺寸：{{ theme_config['settings']['banners']['size'] }}
          </div>
          <form action="" method="post" enctype="multipart/form-data">
            <input type="hidden" name="csrf_token" value="{{ get_csrf_token() }}">
            <button type="submit" class="btn btn-primary">上傳</button>
            <div class="form-group">
              {{ form.banners.label() }}
              {{ form.banners(class_='form-control-file') }}
            </div>
            <button type="submit" class="btn btn-primary">上傳</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-12">
      <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
          <li class="breadcrumb-item active">樣板管理</li>
          <li class="breadcrumb-item"><a href="{{ request.route_url('backend_theme_config_list') }}">樣板列表</a></li>
          <li class="breadcrumb-item active" aria-current="page">{{ theme_config['name'] }} 樣板設定</li>
        </ol>
      </nav>
    </div>
  </div>
</div>
{% endblock content %}
