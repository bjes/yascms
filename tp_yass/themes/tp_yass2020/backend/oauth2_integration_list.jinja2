{% extends 'layouts/master.jinja2' %}
{% block content %}
  <div class="container">
    <div class="row">
      <div class="col-12">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item active">系統設定</li>
            <li class="breadcrumb-item active" aria-current="page">OAuth2 登入整合設定</li>
          </ol>
        </nav>
      </div>
      <div class="col-12">
        <div class="card">
          <div class="card-header">OAuth2 登入整合設定</div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover table-striped text-center table-bordered">
                <thead>
                <tr>
                  <th scope="col" class="d-none d-md-table-cell">編號</th>
                  <th scope="col" class="d-none d-sm-table-cell">Provider</th>
                  <th scope="col" class="d-none d-sm-table-cell">狀態</th>
                  <th scope="col" class="d-none d-sm-table-cell">動作</th>
                </tr>
                </thead>
                <tbody>
                {% for each_provider in provider_list %}
                  <tr>
                    <th scope="row" class="align-middle">{{ loop.index }}</th>
                    <td class="align-middle">{{ each_provider['canonical_name'] }}</td>
                    <td class="align-middle">{% if each_provider['enabled'] %}已啟用{% else %}未啟用{% endif %}</td>
                    <td><a class="btn btn-primary" href="{{ request.route_url('backend_oauth2_integration_edit', provider_name=each_provider['name']) }}">編輯</a></td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12">
        <nav aria-label="breadcrumb" class="mt-3">
          <ol class="breadcrumb">
            <li class="breadcrumb-item active">系統設定</li>
            <li class="breadcrumb-item active" aria-current="page">OAuth2 登入整合設定</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>
{% endblock content %}
