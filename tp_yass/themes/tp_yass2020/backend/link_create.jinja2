{% extends 'layouts/master.jinja2' %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">好站連結</li>
          <li class="breadcrumb-item"><a href="{{ request.route_url('backend_link_list') }}">好站連結列表</a></li>
          <li class="breadcrumb-item active" aria-current="page">建立好站連結</li>
        </ol>
      </nav>
    </div>
    <div class="col-12">
      <div class="card">
        <div class="card-header">建立好站連結</div>
        <div class="card-body">
          {% if form.errors %}
            <div class="alert alert-danger"  role="alert">
              <ul>
                {% for key in form.errors %}
                  {% for msg in form.errors[key] %}
                    <li>{{ msg }}</li>
                  {% endfor %}
                {% endfor %}
              </ul>
            </div>
          {% endif %}
          <form action="" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="csrf_token" value="{{ get_csrf_token() }}">
            <div class="mb-3">
              <button type="submit" class="btn btn-primary">建立</button> <button type="reset" class="btn btn-danger">重設</button>
            </div>
            <div class="form-group">
              {{ form.title.label() }}
              {{ form.title(class_='form-control', placeholder='請輸入標題') }}
            </div>
            <div class="form-group">
              {{ form.url.label() }}
              {{ form.url(class_='form-control', placeholder='請輸入網址') }}
            </div>
            <div class="form-group">
              {{ form.icon.label() }}
              {{ form.icon() }}
            </div>
            <div class="form-group form-check">
              {{ form.is_pinned(class_='form-check-input') }}
              {{ form.is_pinned.label(class_="form-check-label") }}
            </div>
            <div class="form-group">
              {{ form.group_id.label() }}
              {{ form.group_id(class_='form-control') }}
            </div>
            <div class="form-group">
              {{ form.category_id.label() }}
              {{ form.category_id(class_='form-control') }}
            </div>
            <button type="submit" class="btn btn-primary">建立</button> <button type="reset" class="btn btn-danger">重設</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mt-3">
          <li class="breadcrumb-item">好站連結</li>
          <li class="breadcrumb-item"><a href="{{ request.route_url('backend_link_list') }}">好站連結列表</a></li>
          <li class="breadcrumb-item active" aria-current="page">建立好站連結</li>
        </ol>
      </nav>
    </div>
  </div>
</div>
{% endblock content %}
