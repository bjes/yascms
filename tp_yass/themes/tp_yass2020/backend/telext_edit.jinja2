{% extends 'layouts/master.jinja2' %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-12"><h1>分機表 - 修改</h1></div>
    <div class="col-12">
      {% if form.errors %}
        <div class="alert alert-danger" role="alert">
            <ul>
            {% for key in form.errors %}
              {% for msg in form.errors[key] %}
              <li>{{ msg }}</li>
              {% endfor %}
            {% endfor %}
            </ul>
        </div>
      {% endif %}
      <form action="" method="POST">
        <input type="hidden" name="csrf_token" value="{{ get_csrf_token() }}">
        <div class="form-group">
          {{ form.title.label() }}
          {{ form.title(class_='form-control', placeholder='請輸入標題') }}
        </div>
        <div class="form-group">
          {{ form.ext.label() }}
          {{ form.ext(class_='form-control', placeholder='請輸入分機') }}
        </div>
        <div class="form-group form-check">
          {{ form.is_pinned(class_='form-check-input') }}
          {{ form.is_pinned.label(class_="form-check-label") }}
        </div>
        <div class="form-group">
          {{ form.order.label() }}
          {{ form.order(class_='form-control') }}
        </div>
        <button type="submit" class="btn btn-primary mb-3">修改</button> <button type="reset" class="btn btn-danger mb-3">重設</button>
      </form>
    </div>
  </div>
</div>
{% endblock content %}
