{% extends 'layouts/master.jinja2' %}
{% from 'macros.jinja2' import generate_group_trees with context %}
{% block page_css %}
<link href="{{ request.static_path('yascms:static/' ~ request.effective_theme_name ~ '/css/jquery.bonsai-2.1.1.css') }}" rel="stylesheet">
{% endblock page_css %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">群組管理</li>
          <li class="breadcrumb-item active" aria-current="page">群組列表</li>
        </ol>
      </nav>
    </div>
    <div class="col-12">
      <div class="card">
        <div class="card-header">群組列表</div>
        <div class="card-body">
          <a href="{{ request.route_url('backend_group_create') }}" class="btn btn-primary mb-3">建立群組</a>
          {{ generate_group_trees('group_trees', group_trees) }}
          <a href="{{ request.route_url('backend_group_create') }}" class="btn btn-primary mt-3">建立群組</a>
        </div>
      </div>
    </div>
    <div class="col-12">
      <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">群組管理</li>
          <li class="breadcrumb-item active" aria-current="page">群組列表</li>
        </ol>
      </nav>
    </div>
  </div>
</div>
{% endblock content %}
{% block page_js %}
<script src="{{ request.static_path('yascms:static/' ~ request.effective_theme_name ~ '/js/jquery.bonsai-2.1.1.js') }}"></script>
<script>
  $(function() {
    $('#root-group').bonsai({
      expandAll: true
    });
  });
</script>
{% endblock page_js %}
