{% extends 'yascms:themes/' ~ request.effective_theme_name ~ '/layouts/master.jinja2' %}
{% block layout_css %}
  <link rel="stylesheet" href="{{ request.static_path('yascms:static/' ~ request.effective_theme_name ~ '/css/bootstrap-icons-1.13.1/bootstrap-icons.css') }}">
  <link rel="stylesheet" href="{{ request.static_path('yascms:static/' ~ request.effective_theme_name ~ '/css/backend.css') }}">
{% endblock layout_css %}
{% block navbar %}{% include 'navbar.jinja2' %}{% endblock navbar %}
{% block successful_flash %}
  <div class="container mt-3">
    <div class="row">
      <div class="col">
      {% if request.session.peek_flash('success') %}
        {% for msg in request.session.pop_flash('success') %}
          <div class="alert alert-success" role="alert">{{ msg }}</div>
        {% endfor %}
      {% endif %}
      </div>
    </div>
  </div>
{% endblock successful_flash %}
{% block failed_flash %}
  <div class="container mt-3">
    <div class="row">
      <div class="col">
      {% if request.session.peek_flash('fail') %}
        {% for msg in request.session.pop_flash('fail') %}
          <div class="alert alert-danger" role="alert">{{ msg }}</div>
        {% endfor %}
      {% endif %}
      </div>
    </div>
  </div>
{% endblock failed_flash %}
{% block footer %}{% endblock footer %}
{% block layout_js %}
  <script src="{{ request.static_path('yascms:static/' ~ request.effective_theme_name ~ '/js/jquery.smartmenus-1.2.1.min.js') }}"></script>
  <script src="{{ request.static_path('yascms:static/' ~ request.effective_theme_name ~ '/js/jquery.smartmenus.bootstrap-4-1.2.1.min.js') }}"></script>
{% endblock layout_js %}
