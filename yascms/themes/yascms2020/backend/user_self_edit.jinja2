{% extends 'layouts/master.jinja2' %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">{{ request.session['first_name'] }}</li>
          <li class="breadcrumb-item active" aria-current="page">帳號設定</li>
        </ol>
      </nav>
    </div>
    <div class="col-12">
      <div class="card">
        <div class="card-header">帳號設定</div>
        <div class="card-body">
          {% if form.errors %}
            <div class="alert alert-danger" role="alert">
                <ul>
                {% for key in form.errors %}
                  {% for msg in form.errors[key] %}
                    <li>{{ msg }}</li>
                  {% endfor %}
                {% endfor %}
                </ul>
            </div>
          {% endif %}
          <form action="" method="POST">
            <input type="hidden" name="csrf_token" value="{{ get_csrf_token() }}">
            <div class="mb-3">
              <button type="submit" class="btn btn-primary">儲存</button> <button type="reset" class="btn btn-danger">重設</button>
            </div>
            <div class="form-group">
              {{ form.last_name.label() }}
              {{ form.last_name(class_='form-control', placeholder='姓') }}
            </div>
            <div class="form-group">
              {{ form.first_name.label() }}
              {{ form.first_name(class_='form-control', placeholder='名') }}
            </div>
            <div class="form-group">
              {{ form.old_password.label() }}
              {{ form.old_password(class_='form-control', placeholder='舊密碼') }}
            </div>
            <div class="form-group">
              <label for="old_password">新密碼</label>
              {{ form.password(class_='form-control', placeholder='新密碼') }}
            </div>
            <div class="form-group">
              <label for="password_confirm">再次輸入新密碼</label>
              {{ form.password_confirm(class_='form-control', placeholder='再次輸入新密碼') }}
            </div>
            <button type="submit" class="btn btn-primary">儲存</button> <button type="reset" class="btn btn-danger">重設</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-12">
      <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">{{ request.session['first_name'] }}</li>
          <li class="breadcrumb-item active" aria-current="page">帳號設定</li>
        </ol>
      </nav>
    </div>
  </div>
</div>
{% endblock content %}
