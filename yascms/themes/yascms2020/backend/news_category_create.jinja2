{% extends 'layouts/master.jinja2' %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">最新消息</li>
          <li class="breadcrumb-item"><a href="{{ request.route_url('backend_news_category_list') }}">最新消息分類列表</a></li>
          <li class="breadcrumb-item active" aria-current="page">建立最新消息分類</li>
        </ol>
      </nav>
    </div>
    <div class="col-12">
      <div class="card">
        <div class="card-header">建立最新消息分類</div>
        <div class="card-body">
          {% if form.errors %}
            <div class="alert alert-danger"  role="alert">
              <ul>
                {% for key in form.errors %}
                  {% for msg in form.errors[key] %}
                    <li>{{ msg }}</li>
                  {% endfor %}
                {% endfor %}
              </ul>
            </div>
          {% endif %}
          <form action="" method="POST">
            <input type="hidden" name="csrf_token" value="{{ get_csrf_token() }}">
            <div class="mb-3">
              <button type="submit" class="btn btn-primary">建立</button> <button type="reset" class="btn btn-danger">重設</button>
            </div>
            <div class="form-group">
              {{ form.name.label() }}
              {{ form.name(class_='form-control', placeholder='請輸入分類名稱') }}
            </div>
            <div class="form-group">
              {{ form.order.label() }}
              {{ form.order(class_='form-control') }}
            </div>
            <button type="submit" class="btn btn-primary">建立</button> <button type="reset" class="btn btn-danger">重設</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mt-3">
          <li class="breadcrumb-item">最新消息</li>
          <li class="breadcrumb-item"><a href="{{ request.route_url('backend_news_category_list') }}">最新消息分類列表</a></li>
          <li class="breadcrumb-item active" aria-current="page">建立最新消息分類</li>
        </ol>
      </nav>
    </div>
  </div>
</div>
{% endblock content %}
