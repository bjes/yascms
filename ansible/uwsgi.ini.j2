[uwsgi]
strict = true
chdir = {{ project_base_dir }}
home = {{ project_base_dir }}/.venv
wsgi-file = {{ project_base_dir }}/wsgi.py
single-interpreter = true
processes = {{ uwsgi_processes }}
enable-threads = true
threads = {{ uwsgi_threads }}
die-on-term = true
master = false
need-app = true
disable-logging = true
log-4xx = true
log-5xx = true
max-requests = 1000
max-worker-lifetime = 3600
worker-reload-mercy = 60
harakiri = 60
auto-procname = true
vacuum = true
socket = {{ uwsgi_socket_host }}:{{ uwsgi_socket_port }}
py-call-osafterfork = true
